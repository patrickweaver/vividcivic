<div class="post-header">
  

  <h3 class="post-title">
    <a href="{{ this.url }}">
      {{#if this.title }}
        {{ this.title }}
      {{else }}
        <code>
          {{ this.url }}
        </code>
      {{/if}}
    </a>
  </h3>
  <div class="author-date">
    {{ this.author}} | {{ readableDate this.date }}
  </div>

  {{#if this.cover_image_url }}
    <a href="{{ this.url }}">
      <img class="post-cover-image" src="{{ this.cover_image_url }}" alt="{{ this.cover_image_alt }}" />
    </a>
  {{/if }}
  
</div>